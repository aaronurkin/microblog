<!-- Page Header-->
<header class="masthead">
  <div class="container position-relative px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <div class="site-heading">
          <h1><%= @user.full_name %></h1>
          <span class="subheading">User profile</span>
        </div>
      </div>
    </div>
  </div>
</header>
<!-- Main Content-->
<main class="mb-4">
  <div class="container px-4 px-lg-5">
    <div class="row justify-content-center">
      <div class="col-md-7 col-lg-4 mb-5 mb-lg-0 wow fadeIn">
        <div class="card border-0 shadow">
          <img src="https://www.bootdey.com/img/Content/avatar/avatar6.png" alt="..." />
          <div class="card-body p-1-9 p-xl-5">
            <div class="mb-4">
              <h3 class="h4 mb-0"><%= @user.full_name %></h3>
              <span class="text-primary">@<%= @user.nickname %></span>
            </div>
            <ul class="list-unstyled mb-4">
              <li class="mb-3">
                <i class="far fa-envelope display-25 me-3 text-secondary"></i>
                <%= @user.email %>
              </li>
            </ul>
          </div>
          <div class="card-footer text-center p-0">
            <div class="row no-gutters row-bordered row-border-light">
              <div class="d-flex col flex-column text-body py-3">
                <div class="font-weight-bold"><%= @user.posts.length %></div>
                <div class="text-muted small">posts</div>
              </div>
              <div class="d-flex col flex-column text-body py-3">
                <div class="font-weight-bold">
                  <%= @user.followers.length %>
                </div>
                <div class="text-muted small">followers</div>
              </div>
              <div class="d-flex col flex-column text-body py-3">
                <div class="font-weight-bold"><%= @user.followed.length %></div>
                <div class="text-muted small">followed</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="ps-lg-1-6 ps-xl-5">
          <div class="mb-5 wow fadeIn">
            <div class="text-start mb-1-6 wow fadeIn">
              <h2 class="h1 mb-0 text-primary">Last posts</h2>
            </div>
            <% @user.posts.take(7).each do |post| %>
              post.content
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
